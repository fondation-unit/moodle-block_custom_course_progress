<h3>{{#str}} summary, block_custom_course_progress, {{username}} {{/str}}</h3>
<em><h4>{{usercity}}</h4></em>

<p>
  {{#str}} export:dateoftheday, block_custom_course_progress {{/str}} {{datenow}}
</p>

<p>
  {{#str}} export:first_day, block_custom_course_progress {{/str}} {{firstday}}
</p>

{{{ separator }}}
{{{ separator }}}
<h3>{{#str}} export:worked_courses, block_custom_course_progress {{/str}}</h3>
{{{ separator }}}

{{#progresscourses}}
  {{{ separator }}}
  <h4>{{fullname}}</h4>
  <p>{{#str}} export:achieved, block_custom_course_progress {{/str}} {{courseprogress}}%</p>
  <p>{{#str}} export:total_sections, block_custom_course_progress {{/str}} {{total}}</p>
  <p>{{#str}} export:completed_sections, block_custom_course_progress {{/str}} {{validated}}</p>
  <p>{{#str}} export:inprogress_sections, block_custom_course_progress {{/str}} {{inprogress}}</p>
  <p>{{#str}} export:untouched_sections, block_custom_course_progress {{/str}} {{noprogress}}</p>
  {{{ separator }}}
{{/progresscourses}}

{{#showidlecourses}}
  {{{ separator }}}
  <h3>{{#str}} export:untouched_courses, block_custom_course_progress {{/str}}</h3>
  {{{ separator }}}
  {{#idlecourses}}
    <h4>{{fullname}}</h4>
  {{/idlecourses}}
{{/showidlecourses}}